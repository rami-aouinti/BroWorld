{% extends '../../../base.html.twig' %}

{% block title %}Hobby index{% endblock %}

{% block body %}
    <h1>Hobby index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for hobby in hobbies %}
            <tr>
                <td>{{ hobby.id }}</td>
                <td>{{ hobby.name }}</td>
                <td>
                    <a href="{{ path('app_hobby_show', {'id': hobby.id}) }}">show</a>
                    <a href="{{ path('app_hobby_edit', {'id': hobby.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_hobby_new') }}">Create new</a>
{% endblock %}
