{% extends 'base_admin.html.twig' %}

{% block title %}{{ 'cities'|trans }}{% endblock %}

{% block stylesheets %}

    {{ encore_entry_link_tags('css/city') }}

{% endblock %}

{% block body %}

    <ul class="nav nav-tabs">
        <li class="nav-item active">
            <span class="nav-link active">
                <i class="fas fa-map-marker-alt text-danger"></i> {{ 'cities'|trans }}
            </span>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="{{ path('admin_city_new') }}">
                <i class="fas fa-plus-square text-danger"></i> {{ 'label.create_city'|trans }}
            </a>
        </li>
    </ul>

    <div class="card my-4">

        <div class="card-body px-0 pb-2">
            <div class="table-responsive p-0">
                <table class="table align-items-center mb-0">
                    <thead class="thead">
                    <tr>
                        <th class="text-secondary text-xxs font-weight-bolder opacity-7">{{ 'table.city_name' | trans }}</th>
                        <th class="text-secondary text-xxs font-weight-bolder opacity-7">{{ 'table.slug' | trans }}</th>
                        <th class="text-secondary text-xxs font-weight-bolder opacity-7">{{ 'table.action' | trans }}</th>
                    </tr>
                    </thead>
                    <tbody>

                    {% for city in cities %}
                        <tr>
                            <td>
                                <p class="text-xs font-weight-bold mb-0">
                                    {{ city.name }}
                                </p>
                            </td>
                            <td class="hidden-sm">
                                <p class="text-xs font-weight-bold mb-0"></p>
                                {{ city.slug }}
                                </td>
                            <td>
                                <p class="text-xs font-weight-bold mb-0">
                                    {{ include('admin/city/_action_form.html.twig', {city: city}, with_context = false) }}
                                </p>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td>{{ 'no_items_found' | trans }}</td>
                        </tr>
                    {% endfor %}

                    </tbody>
                </table>
            </div>
        </div>
    </div>

{% endblock %}
