{% extends 'base_admin.html.twig' %}

{% block title %}{{ 'title.edit_city' | trans }}{% endblock %}

{% block body %}
    <div class="card mb-3 py-4">
        <div class="card-header py-3 position-relative mt-n4 mx-3 z-index-2">
            <i class="fas fa-edit text-danger">

            </i> {{ 'title.edit_city' | trans }}
        </div>
        <div class="card-body mx-3 mx-md-4 mt-n3">

            {{ form_start(form) }}
            <div class="row">
                <div class="col-md-6">
                    {{ form_row(form.name) }}
                </div>
                <div class="col-md-6">
                    {{ form_row(form.slug) }}
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    {{ form_row(form.title) }}
                </div>
                <div class="col-md-6">
                    {{ form_row(form.meta_title) }}
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    {{ form_row(form.meta_description) }}
                </div>
            </div>

            <div class="row">
                <div class="form-group justify-content-center py-3">
                    <button type="submit" class="btn btn-primary">
                        {{ 'action.save'|trans }}
                    </button>
                </div>
            </div>

            {{ form_end(form) }}

        </div>
    </div><br>

{% endblock %}

{% block javascripts %}{% endblock %}
